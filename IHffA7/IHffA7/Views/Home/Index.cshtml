@using IHffA7.Models
@model IEnumerable<FilmsTodayModel>

@{ 
    ViewBag.NoItems = "Geen films vandaag!";
}

<img src="~/Content/Images/home/u0.png" />
<h2>Today</h2>
@if (Model == null)
{
    @ViewBag.NoItems
}
@foreach (var today in Model)
{
    <div>
        <h2>@today.title</h2>
        <img src="~/Content/Images/@today.filmLogo" />
            <br />
        @today.beginTime - @today.endTime
            <br />
        @today.locationName - Zaal: @today.roomName
            <hr />
        Vrije plaatsen: @today.availableSeats - &#8364 @today.price
    </div>
}
