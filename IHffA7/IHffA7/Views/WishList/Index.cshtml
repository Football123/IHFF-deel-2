@model IHffA7.Models.WishlistViewModel
@{
    ViewBag.Title = "Index";
}

<h2>WISHLIST</h2>
<table>
    <tr>
        <th>Item</th>
        <th>aantal kaarten</th>
        <th>Prijs per kaart</th>
        <th>Prijs Totaal</th>
    </tr>
    @if (Model.Films != null)
    {
        <tr> <td>FILMS</td> </tr>
        foreach (var c in Model.Films)
        {
            <tr>
                <td>
                    @c.Film.Title
                    <br />
                    @c.Activiteit.StartTime
                    <br />
                    @c.Activiteit.EndTime
                    <br />
                    @c.Location.Name

                </td>
                <td>
                    @c.WishlistItem.NumberOfPersons
                </td>
                <td>
                    @c.Activiteit.Price
                </td>
                <td>
                    @c.TotalPrice
                </td>
                <td>
                    @Html.ActionLink("Remove", "RemoveFilmFromSesWishlist", "WishList", new
          {
              numberOfpersones = c.WishlistItem.NumberOfPersons,
              activityId = c.Activiteit.Id,
              start = c.Activiteit.StartTime,
              end = c.Activiteit.EndTime
          }, null);
                </td>
                <td>
                    ▼--------------F-I-L-M--------------▼
                </td>
            </tr>
            <tr></tr>
        }
    }
    <tr>
        <td>------------------------------------</td>
    </tr>
    @if (Model.Restaurants != null)
    {<tr> <td>RESTAURANTS</td> </tr>
        foreach (var d in Model.Restaurants)
        {
            <tr>
                <td>
                    @d.Location.Name
                    <br />
                    @d.Activiteit.StartTime
                    <br />
                    @d.Location.Name

                </td>
                <td>
                    @d.WishlistItem.NumberOfPersons
                </td>
                <td>
                    @d.Activiteit.Price
                </td>
                <td>
                    @d.TotalPrice
                </td>
                <td>
                    ▲----R-E-S-T-A-U-R-A-N-T---▲
                </td>
            </tr>
            <tr></tr>
        }
    }
</table>

@Html.ActionLink("Get you wishlist you stored earlier (well, you get wislistid = 1) ;)", "GetSavedWishlist", "WishList", new
{
    wislistId = 1,
}, null)